<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingTop="1dp"
    android:background="@color/lightgrey"
    android:paddingBottom="1dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:elevation="5dp"
        card_view:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="3dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/statusLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal">

                   <!-- <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="UNIT : "
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtSizeOne"
                        />-->


                    <TextView
                        android:id="@+id/txtUnitName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="unit Name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txtSizeOne"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Topic : "
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSizesmall"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtTopic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="PMCD(THEORY)"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSizesmall"
                         />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/calender" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:text="Proposed : "
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginLeft="5dp"
                        android:textSize="@dimen/textSizesmall" />


                    <TextView
                        android:id="@+id/txtProposeDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:text="09-09-2017"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/textSizesmall" />

                    <!--  <TextView
                          android:id="@+id/txtDate"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:fontFamily="sans-serif-smallcaps"
                          android:gravity="center"
                          android:text="09-09-2017"
                          android:textColor="@color/background"
                          android:textSize="@dimen/textHeading" />-->


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/calender" />


                    <TextView
                        android:id="@+id/txtActualDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Actual : "
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSizesmall"
                        android:textStyle="bold" />

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:id="@+id/stripLyt"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:visibility="gone"
                android:orientation="vertical">

            </LinearLayout>



        </LinearLayout>


    </android.support.v7.widget.CardView>




</RelativeLayout>
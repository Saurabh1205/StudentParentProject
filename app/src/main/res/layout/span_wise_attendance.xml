<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgrey"
    android:id="@+id/lytAttndence"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:id="@+id/belowId"
        android:visibility="gone"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/back_press"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/i_back"/>
        <TextView
            android:id="@+id/txt_toolbarName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_below="@+id/belowId"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:id="@+id/card_view_net"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:visibility="gone"
            android:padding="@dimen/ten_dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginBottom="@dimen/ten_dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_weight="1.6"
                                android:id="@+id/txt_sub_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Net Attendance (in %)"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:textColor="#636363"
                                android:textStyle="bold"
                                android:maxLines="2"
                                android:layout_marginLeft="@dimen/ten_dp"
                                android:textSize="13.3sp"/>

                            <ImageView
                                android:id="@+id/imgPer"
                                android:layout_width="0dp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/ten_dp"
                                android:layout_weight="0.2"
                                android:gravity="right"
                                android:src="@drawable/icon_check"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <TextView
                                android:layout_weight="0.7"
                                android:id="@+id/t"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="[Total Present"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:textColor="#6e6e6e"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:layout_marginLeft="@dimen/ten_dp"
                                android:textSize="10sp"/>
                            <TextView
                                android:layout_weight="0.3"
                                android:id="@+id/txt_tolPre"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_gravity="center"
                                android:gravity="left"
                                android:textColor="#00a651"
                                android:textStyle="bold"

                                android:layout_marginLeft="@dimen/two_dp"
                                android:textSize="10sp"/>

                            <TextView
                                android:layout_weight="0.7"
                                android:id="@+id/tt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="[Total Periods"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:textColor="#6e6e6e"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:layout_marginLeft="@dimen/ten_dp"
                                android:textSize="10sp"/>
                            <TextView
                                android:layout_weight="0.3"
                                android:layout_marginLeft="@dimen/two_dp"
                                android:id="@+id/txt_tolPer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/text_blue"
                                android:textStyle="bold"
                                android:textSize="10sp"/>



                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
                <View
                    android:layout_width="0.6dp"
                    android:layout_height="match_parent"
                    android:background="#5c656565"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="1dp"
                    android:visibility="visible" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.9"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_total_pre"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:gravity="right"
                            android:textColor="#00a651"
                            android:layout_marginLeft="@dimen/ten_dp"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/txt_total_preCe"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:gravity="right"
                            android:textColor="#318adc"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/five_dp"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/txt_total_pre2"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:gravity="right"
                            android:visibility="gone"
                            android:textColor="#318adc"
                            android:layout_marginLeft="@dimen/five_dp"
                            android:textSize="20sp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date_layout"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginRight="@dimen/five_dp"
                android:layout_marginTop="5dp"
                android:visibility="visible"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="0dp">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10.3dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/show_search_startdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13.3sp"
                            android:textColorHint="@color/blue"
                            android:layout_gravity="center"
                            android:gravity="left|center"
                            android:background="@drawable/btn_rectange_white"
                            android:hint="15-08-2020"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity ="center|right"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView_startDate"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/icon_calendar"
                                android:gravity="center|right"
                                android:layout_gravity ="center"
                                android:padding="2dp"
                                android:layout_marginRight="30.3dp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="5dp"
                android:visibility="visible"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="0dp">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10.3dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/show_search_enddate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13.3sp"
                            android:textColorHint="@color/blue"
                            android:layout_gravity="center"
                            android:gravity="left|center"
                            android:background="@drawable/btn_rectange_white"
                            android:hint="15-08-2020"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity ="center|right"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView_endDate"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/icon_calendar"
                                android:gravity="center|right"
                                android:layout_gravity ="center"
                                android:padding="2dp"
                                android:layout_marginRight="30.3dp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:id="@+id/spanWiseList">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|center_vertical"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progAttndFrgmt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:indeterminateTint="@color/colorPrimary"
        android:indeterminateTintMode="src_atop"
        android:visibility="gone" />

</RelativeLayout>

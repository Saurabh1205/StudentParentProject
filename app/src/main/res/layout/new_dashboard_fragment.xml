<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgrey"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_net"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginRight="@dimen/five_dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="4dp"
                android:visibility="visible"
                android:padding="@dimen/ten_dp"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:layout_marginLeft="@dimen/five_dp"
                    android:layout_marginBottom="@dimen/ten_dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_weight="1.6"
                                    android:id="@+id/txt_sub_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="Net Attendance (in %)"
                                    android:layout_gravity="center"
                                    android:gravity="left"
                                    android:textColor="#636363"
                                    android:textStyle="bold"
                                    android:maxLines="2"
                                    android:layout_marginLeft="@dimen/ten_dp"
                                    android:textSize="13.3sp"/>

                                <ImageView
                                    android:id="@+id/imgPer"
                                    android:layout_width="0dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/ten_dp"
                                    android:layout_weight="0.2"
                                    android:gravity="right"
                                    android:src="@drawable/icon_check"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">
                                <TextView
                                    android:layout_weight="0.7"
                                    android:id="@+id/t"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="[Present"
                                    android:layout_gravity="center"
                                    android:gravity="left"
                                    android:textColor="#6e6e6e"
                                    android:textStyle="bold"
                                    android:singleLine="true"
                                    android:layout_marginLeft="@dimen/ten_dp"
                                    android:textSize="10sp"/>
                                <TextView
                                    android:layout_weight="0.3"
                                    android:id="@+id/txt_tolPre"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textColor="#00a651"
                                    android:textStyle="bold"

                                    android:layout_marginLeft="@dimen/two_dp"
                                    android:textSize="10sp"/>

                                <TextView
                                    android:layout_weight="0.7"
                                    android:id="@+id/tt"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="[Periods"
                                    android:layout_gravity="center"
                                    android:gravity="left"
                                    android:textColor="#6e6e6e"
                                    android:textStyle="bold"
                                    android:singleLine="true"
                                    android:layout_marginLeft="@dimen/ten_dp"
                                    android:textSize="10sp"/>
                                <TextView
                                    android:layout_weight="0.3"
                                    android:layout_marginLeft="@dimen/two_dp"
                                    android:id="@+id/txt_tolPer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textColor="@color/text_blue"
                                    android:textStyle="bold"
                                    android:textSize="10sp"/>



                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>
                    <View
                        android:layout_width="0.6dp"
                        android:layout_height="match_parent"
                        android:background="#5c656565"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="1dp"
                        android:visibility="visible" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.9"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginRight="@dimen/ten_dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txt_total_pre"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:gravity="right"
                                android:textColor="#00a651"
                                android:layout_marginLeft="@dimen/ten_dp"
                                android:textSize="20sp"/>
                            <TextView
                                android:id="@+id/txt_total_preCe"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="%"
                                android:gravity="right"
                                android:textColor="#318adc"
                                android:textStyle="bold"
                                android:layout_marginLeft="@dimen/five_dp"
                                android:textSize="20sp"/>

                            <TextView
                                android:id="@+id/txt_total_pre2"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100"
                                android:gravity="right"
                                android:visibility="gone"
                                android:textColor="#318adc"
                                android:layout_marginLeft="@dimen/five_dp"
                                android:textSize="20sp"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="2dp"
            android:id="@+id/subject_List">

        </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:id="@+id/card_view_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/two_dp"
            android:layout_marginLeft="@dimen/five_dp"
            android:layout_marginRight="@dimen/five_dp"
            android:layout_marginBottom="@dimen/two_dp"
            android:padding="@dimen/ten_dp"
            android:visibility="visible"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="true"
            app:contentPadding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="@dimen/ten_dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#2673ba"
                    android:text="2019 -2020"
                    android:visibility="invisible"
                    android:id="@+id/txt_date"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13.3sp"
                    android:textColor="#6e6e6e"
                    android:text="Complete Fees (Academic + Non Academic)"
                    android:id="@+id/txt_Fee_name"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:id="@+id/txt_totalfee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="6.7sp"
                        android:textColor="#00a651"
                        android:layout_weight="1"
                        android:text="Total Fees Received" />

                    <TextView
                        android:id="@+id/txt_Outstanding"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="6.7sp"
                        android:textColor="#f26d7d"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="Balance" />

                    <TextView
                        android:id="@+id/txt_Adj"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="6.7sp"
                        android:textColor="#f26d7d"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Adjustment" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:weightSum="3"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/five_dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_total_fee_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14.7sp"
                            android:textColor="#00a651"
                            android:text="0" />
                        <TextView
                            android:layout_marginLeft="@dimen/two_dp"
                            android:layout_marginRight="@dimen/two_dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"/>
                        <TextView
                            android:id="@+id/txt_outVal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14.7sp"
                            android:textColor="#555555"
                            android:text="0" />
                    </LinearLayout>
                    <TextView
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#f26d7d"
                        android:gravity="center"
                        android:id="@+id/txt_Outsatnding_val"
                        android:text="0"/>

                    <TextView
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#f26d7d"
                        android:id="@+id/txt_Adju_val"
                        android:gravity="center"
                        android:text="0"/>

                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>


        <ProgressBar
            android:id="@+id/progAttndFrgmt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:indeterminateTint="@color/colorPrimary"
            android:indeterminateTintMode="src_atop"
            android:visibility="gone" />

    </LinearLayout>


</ScrollView>

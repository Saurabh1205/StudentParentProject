<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/assignLyt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightgrey"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="2dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/linLytStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:src="@drawable/subject" />

                <TextView
                    android:id="@+id/txtSubj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="3dp"
                    android:text="Subject name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtSizeOne"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txtAssigName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="3dp"
                    android:text="Assignment name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtSizeOne"
                    android:textStyle="bold" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"></LinearLayout>

            <TextView
                android:id="@+id/txtEmpRemark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="3dp"
                android:layout_margin="1dp"
                android:background="@color/white"
                android:text="Submission type"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txtSizeSmall"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/lytUploadSoftCopy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/lightgrey"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imgVwDownload"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/circlebg"
                    android:padding="10dp"
                    android:src="@drawable/downloadassign" />

                <TextView
                    android:id="@+id/txtDownloadFileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:padding="3dp"
                    android:text="upload file"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizesmall"
                    android:textStyle="bold" />



                <ImageView
                    android:id="@+id/imgVwUpload"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circlebg"
                    android:padding="10dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/uploadassign" />

                <TextView
                    android:id="@+id/txtFileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:padding="3dp"
                    android:text="upload file"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizesmall"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtAssignType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="3dp"
                    android:layout_margin="1dp"
                    android:background="@color/white"
                    android:text="Submission type"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/txtSizeSmall"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtAssignLstDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="3dp"
                    android:layout_margin="1dp"
                    android:background="@color/white"
                    android:text="Submission Last Date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtSizeSmall"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightgrey"
                android:padding="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtFacltyRemark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="3dp"
                    android:layout_margin="1dp"
                    android:background="@color/white"
                    android:text="Submission type"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/txtSizeSmall"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCorrectionRemark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="3dp"
                    android:layout_margin="1dp"
                    android:background="@color/white"
                    android:text="Submission type"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/txtSizeSmall"
                    android:textStyle="bold" />



            </LinearLayout>


            <Button
                android:id="@+id/btnAssignSubmit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Submit"
                android:textColor="@color/white" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
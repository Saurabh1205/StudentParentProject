<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3.3dp"
        app:cardElevation="15dp"
        android:layout_marginLeft="@dimen/ten_dp"
        android:layout_marginRight="@dimen/ten_dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:visibility="visible"
        android:padding="@dimen/ten_dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginLeft="@dimen/five_dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13.3sp"
                android:layout_marginLeft="@dimen/ten_dp"
                android:textColor="#464646"
                android:text="Network Security Theory"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_sub_Last_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Submission Last Date -"
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:textColor="#636363"
                            android:maxLines="2"
                            android:layout_marginLeft="@dimen/ten_dp"
                            android:textSize="8.7sp"/>

                        <TextView
                            android:layout_weight="0.2"
                            android:id="@+id/tv_LastDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thursday 20 Aug 2020"
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:textColor="@color/text_blue"
                            android:layout_marginLeft="@dimen/ten_dp"
                            android:textSize="8.7sp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_sub_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Submission Type -"
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:textColor="#636363"
                            android:maxLines="2"
                            android:layout_marginLeft="@dimen/ten_dp"
                            android:textSize="8.7sp"/>

                        <TextView
                            android:id="@+id/txt_copyTex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Hard-Copy"
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:textColor="@color/text_blue"
                            android:layout_marginLeft="@dimen/ten_dp"
                            android:textSize="8.7sp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:layout_marginRight="@dimen/five_dp"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:layout_marginBottom="@dimen/ten_dp"
                        android:background="#5c656565"/>
                    <TextView
                        android:id="@+id/txt_Des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="8.7sp"
                        android:layout_marginRight="@dimen/two_dp"
                        android:layout_marginLeft="@dimen/ten_dp"
                        android:textColor="#919191"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Quis ipsum suspendisse ultrices gravida. " />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/layout_avlType"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/lay_download"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/ten_dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/img_download"
                                android:layout_width="30dp"
                                android:layout_height="20dp"
                                android:src="@drawable/downloadassign"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txt_download"
                                android:text="Download File"
                                android:layout_marginLeft="@dimen/five_dp"
                                android:layout_gravity="center"
                                android:textSize="@dimen/ten_dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lay_upload"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/ten_dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/img_upload"
                                android:layout_width="30dp"
                                android:layout_height="20dp"
                                android:src="@drawable/uploadassign"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txt_upload"
                                android:text="Upload File"
                                android:layout_marginLeft="@dimen/five_dp"
                                android:layout_gravity="center"
                                android:textSize="@dimen/ten_dp"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
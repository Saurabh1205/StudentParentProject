<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:visibility="visible"
            android:padding="@dimen/ten_dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginBottom="@dimen/ten_dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_weight="1.6"
                                android:id="@+id/txt_sub_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Artificial Intelligence"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:textColor="#636363"
                                android:textStyle="bold"
                                android:maxLines="2"
                                android:layout_marginLeft="@dimen/ten_dp"
                                android:textSize="13.3sp"/>

                            <TextView
                                android:layout_weight="0.2"
                                android:id="@+id/txt_Tm"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="TH"
                                android:layout_gravity="center"
                                android:gravity="right"
                                android:textColor="@color/text_blue"
                                android:textStyle="bold"
                                android:layout_marginLeft="@dimen/ten_dp"
                                android:textSize="6.7sp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <TextView
                                android:layout_weight="0.8"
                                android:id="@+id/t"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="[Total Present"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:textColor="#6e6e6e"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:layout_marginLeft="@dimen/ten_dp"
                                android:textSize="10sp"/>
                            <TextView

                                android:id="@+id/txt_tolPre"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 30]"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:textColor="#00a651"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:layout_marginLeft="@dimen/two_dp"
                                android:textSize="10sp"/>

                            <TextView
                                android:layout_weight="0.8"
                                android:id="@+id/tt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="[Total Periods"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:textColor="#6e6e6e"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:layout_marginLeft="@dimen/ten_dp"
                                android:textSize="10sp"/>
                            <TextView
                               android:layout_marginLeft="@dimen/two_dp"
                                android:id="@+id/txt_tolPer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 36]"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/text_blue"
                                android:textStyle="bold"
                                android:textSize="10sp"/>



                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
                <View
                    android:layout_width="0.6dp"
                    android:layout_height="match_parent"
                    android:background="#5c656565"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="1dp"
                    android:visibility="visible" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.9"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_total_pre"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:gravity="right"
                            android:textColor="#00a651"
                            android:layout_marginLeft="@dimen/ten_dp"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/txt_total_preCe"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:gravity="right"
                            android:textColor="#318adc"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/five_dp"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/txt_total_pre2"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:gravity="right"
                            android:visibility="gone"
                            android:textColor="#318adc"
                            android:layout_marginLeft="@dimen/five_dp"
                            android:textSize="20sp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


</LinearLayout>

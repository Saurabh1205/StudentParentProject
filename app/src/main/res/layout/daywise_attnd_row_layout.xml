<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightgrey"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearTimeLyt"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:background="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/timewhite"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/txtStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="08:00 am"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/textSizesmall"
                android:fontFamily="sans-serif-smallcaps"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TO"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"

                android:textColor="@color/white"
                android:textSize="@dimen/textSizesmall"
                android:textStyle="bold"
                android:fontFamily="sans-serif-smallcaps"
                />
            <TextView
                android:id="@+id/txtEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="09:00 am"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/textSizesmall"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif-smallcaps"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Period Sequence No : "
                            android:fontFamily="sans-serif-smallcaps"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSizesmall"
                            android:padding="2dp"/>
                        <TextView
                            android:id="@+id/txtPrdSq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01"
                            android:fontFamily="sans-serif-smallcaps"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/txtSizeTwo"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Period Type : "
                            android:fontFamily="sans-serif-smallcaps"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSizesmall"
                            android:padding="2dp"/>
                        <TextView
                            android:id="@+id/txtPrdType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01"
                            android:fontFamily="sans-serif-smallcaps"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/txtSizeOne"
                            />
                    </LinearLayout>



                    <TextView
                        android:id="@+id/txtSubject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Subject Name"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textStyle="bold"
                        android:textSize="@dimen/textSizesmall"
                        android:textColor="@color/black"
                        android:padding="2dp"/>


                    <TextView
                        android:id="@+id/txtFaculty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Faculty Name"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSizesmall"
                        android:padding="2dp"/>




                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lytBlock"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginLeft="1dp"
                    android:padding="5dp">

                    <LinearLayout
                        android:id="@+id/circularLyt"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:background="@drawable/circle_white"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtstatus"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="@dimen/textSizesmall"
                            android:text="P"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <TextView
                android:id="@+id/txtTopicDescptn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Topic Description"
                android:fontFamily="sans-serif"
                android:background="@color/white"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:visibility="visible"
                android:textSize="@dimen/textSizesmall"
                android:padding="2dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_weight="12"
            android:layout_marginLeft="@dimen/two_dp"
            android:layout_marginBottom="@dimen/five_dp">

            <ImageView
                android:id="@+id/img_start"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_black"/>
            <View
                android:id="@+id/view_mid"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="#e9e9e9"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/img_end"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_black"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginTop="@dimen/fourteen_dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/five_dp"
                        android:text="10:45 AM  To  11:45 AM"
                        android:textColor="#636363"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/two_dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_sub_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="left"

                            android:text="Artificial Intelligence "
                            android:textColor="#636363"
                            android:textSize="10.3sp" />

                        <TextView
                            android:id="@+id/txt_th"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/five_dp"
                            android:layout_marginRight="8dp"
                            android:gravity="center"
                            android:text="TH"
                            android:textSize="10.3sp"
                            android:visibility="visible" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_pro_Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/five_dp"
                        android:visibility="visible"
                        android:textSize="6.7sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:id="@+id/lay_branch"
                    android:visibility="invisible"
                    android:layout_marginRight="@dimen/five_dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/BranchAll"
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_shap_uni_syllbus_btn"
                        android:gravity="center"
                        android:textColor="#636363"
                        android:textSize="6.7sp" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

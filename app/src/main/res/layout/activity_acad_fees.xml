<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wordpro.studentproject.activities.Payables.AcadFeesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtAcdFee"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="ACADEMIC FEES"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/studentblue" />

                    <TextView
                        android:id="@+id/txtStudName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Student Name"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/txtSizeOne"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/yearblue" />

                    <TextView
                        android:id="@+id/txtYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="year"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/txtSizeOne"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/semesterblue" />

                    <TextView
                        android:id="@+id/txtSem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Semester"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/txtSizeOne"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/sectionblue" />

                    <TextView
                        android:id="@+id/txtSection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="section"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/txtSizeOne"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/lightgrey"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtFeesType"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Fees Type"
                android:paddingLeft="5dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_marginRight="0.5dp"
                android:textAllCaps="true"
                android:textSize="@dimen/txtSizeOne"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtParticulars"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Particulars"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:textAllCaps="true"
                android:layout_weight="1"
                android:layout_marginRight="0.5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/txtSizeOne"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtReceivableAmt"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:layout_marginRight="0.5dp"
                android:background="@color/colorPrimary"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Receivable Amount"
                android:textColor="@color/white"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textAllCaps="true"
                android:textSize="@dimen/txtSizeOne"
                android:layout_weight="1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtReceivedAmt"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:layout_marginRight="0.5dp"
                android:paddingLeft="5dp"
                android:textAllCaps="true"
                android:paddingRight="5dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Received Amount"
                android:textColor="@color/white"
                android:textSize="@dimen/txtSizeOne"
                android:layout_weight="1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtAdjustment"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:textAllCaps="true"
                android:paddingRight="5dp"
                android:layout_marginRight="0.5dp"
                android:paddingLeft="5dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Adjustment"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="@dimen/txtSizeOne"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtOutstanding"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:layout_gravity="center"
                android:layout_marginRight="0.5dp"
                android:gravity="center|left"
                android:paddingLeft="5dp"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Outstanding"
                android:textColor="@color/white"
                android:paddingRight="5dp"
                android:textSize="@dimen/txtSizeOne"
                android:layout_weight="1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtAdvance"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:gravity="center|left"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Advance"
                android:paddingRight="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/txtSizeOne"
                android:layout_weight="1"
                android:textStyle="bold" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtStructural"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="STRUCTURAL fees"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rexyVwAcadFees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>


    </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/lightgrey"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="233dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:background="@color/colorPrimaryDark"
            android:layout_marginRight="0.5dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Total STRUCTURAL fees"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txt2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center|right"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Receivable Amt."
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txtSizeOne"
            android:textAllCaps="true"
            android:paddingRight="5dp"
            android:layout_marginRight="0.5dp"
            android:layout_weight="1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt3"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark"
            android:gravity="center|right"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Received Amt."
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:paddingRight="5dp"
            android:layout_marginRight="0.5dp"
            android:textSize="@dimen/txtSizeOne"
            android:layout_weight="1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center|right"
            android:paddingRight="5dp"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Adjustment"
            android:textAllCaps="true"
            android:layout_marginRight="0.5dp"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:textSize="@dimen/txtSizeOne"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt5"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center|right"
            android:background="@color/colorPrimaryDark"
            android:paddingRight="5dp"
            android:layout_marginRight="0.5dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Outstanding"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txtSizeOne"
            android:layout_weight="1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt6"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center|right"
            android:background="@color/colorPrimaryDark"
            android:paddingRight="5dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Advance"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txtSizeOne"
            android:layout_weight="1"
            android:textStyle="bold" />



    </LinearLayout>


</RelativeLayout>

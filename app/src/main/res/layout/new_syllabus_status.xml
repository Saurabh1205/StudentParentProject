<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginLeft="@dimen/five_dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_CoveredValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="90%"
                android:textSize="25sp"
                android:textColor="#00a651"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/txt_Covered_syllabus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL SYLLABUS COVERED"
                android:textSize="11.7sp"
                android:textColor="#464646"
                android:layout_marginTop="@dimen/fourteen_dp"
                android:layout_gravity="center"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/fourteen_dp"
                android:layout_marginBottom="@dimen/fourteen_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_TopicValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:textSize="25sp"
                        android:textColor="#464646"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/txt_total_topic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TOTAL TOPICS"
                        android:textSize="11.7sp"
                        android:textColor="#464646"
                        android:layout_marginTop="@dimen/fourteen_dp"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_Topic_covValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textSize="25sp"
                        android:textColor="#464646"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/txt_topic_covered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TOPICS COVERED"
                        android:textSize="11.7sp"
                        android:textColor="#464646"
                        android:layout_marginTop="@dimen/fourteen_dp"
                        android:layout_gravity="center"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


</LinearLayout>

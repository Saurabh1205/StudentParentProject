<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/otpLayout"
    android:orientation="vertical"
    tools:context="com.wordpro.studentproject.activities.OTPActivity">


    <LinearLayout
        android:id="@+id/layout_otp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#01c6d7"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="50dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:gravity="center_horizontal"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Enter the OTP from the message send to you."
            android:textColor="@color/white"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/edtOTP"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_blue_button"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:hint="Enter OTP"
            android:layout_marginTop="20dp"
            android:inputType="number"
            android:maxLength="6"
            android:maxLines="1"
            android:padding="5dp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/txtSizeTwo" />



        <TextView
            android:id="@+id/txt_resend_otp"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal|right"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Resend OTP"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp" />

        <Button
            android:id="@+id/sign_in_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_white_button"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="2dp"
            android:text="@string/action_Next"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/layout_edit_mobile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:visibility="visible"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_edit_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="edit login details"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="16dp" />

            <ImageButton
                android:id="@+id/btn_edit_login_details"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:src="@drawable/ic_edit_mobile" />
        </LinearLayout>


    </LinearLayout>

    <ProgressBar
        android:id="@+id/otp_progress"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:indeterminateTint="@color/colorPrimary"
        android:indeterminateTintMode="src_atop"
        android:visibility="gone" />



</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wordpro.studentproject.activities.schedule_menu.SelfTimeTableActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTmtbl"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center|left"
            android:background="@color/colorPrimary"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:text="TIME TABLE"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgProf"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:src="@drawable/student" />

        <TextView
            android:id="@+id/txtStudName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:padding="2dp"
            android:text="Student Name"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizesmall"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:src="@drawable/sec" />

        <TextView
            android:id="@+id/txtSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:padding="2dp"
            android:text="Session"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizesmall"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:src="@drawable/year" />

        <TextView
            android:id="@+id/txtCourseYr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:padding="2dp"
            android:text="year-year"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizesmall"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:src="@drawable/semseter" />

        <TextView
            android:id="@+id/txtSemester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:padding="2dp"
            android:text="Semester"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizesmall"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:padding="2dp"
            android:text="THEORY"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizesmall"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="#F6F5C7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:padding="2dp"
            android:text="PRACTICAL"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizesmall"
            android:textStyle="bold" />







    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    android:paddingRight="0.75dp"
                    android:paddingLeft="1dp">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="0.75dp"
                        android:background="@color/colorPrimary"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/colorPrimaryDark"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="2dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:padding="2dp"
                                android:src="@drawable/time" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="TIME"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="2dp">

                            <ImageView
                                android:id="@+id/imgLecturer"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:padding="2dp"
                                android:src="@drawable/calendar" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="DAY"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </LinearLayout>


                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="0.75dp"
                        android:background="@color/white"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Mon"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtSizeTwo"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="0.75dp"
                        android:background="@color/white"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="TUE"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtSizeTwo"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="0.75dp"
                        android:background="@color/white"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="WED"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtSizeTwo"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="0.75dp"
                        android:background="@color/white"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="THUR"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtSizeTwo"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="0.75dp"
                        android:background="@color/white"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="FRI"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtSizeTwo"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="0.75dp"
                        android:background="@color/white"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="SAT"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtSizeTwo"
                        android:textStyle="bold" />

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/seatLegendLayout">

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/linearLayout_gridtableLayout"
                            android:layout_width="900dp"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:orientation="horizontal">


                            <GridView
                                android:id="@+id/gv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorPrimary"
                                android:gravity="left"
                                android:horizontalSpacing="1dp"
                                android:paddingBottom="1dp"
                                android:scrollbarAlwaysDrawHorizontalTrack="true"
                                android:scrollbarAlwaysDrawVerticalTrack="true"
                                android:stretchMode="columnWidth"
                                android:verticalSpacing="1dp">

                            </GridView>


                        </LinearLayout>
                    </FrameLayout>
                </HorizontalScrollView>


            </LinearLayout>
            <!--</HorizontalScrollView>-->

            <LinearLayout
                android:id="@+id/subjCodeLyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:text="Subject Code"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center|left"
                        android:padding="2dp"
                        android:text="Subject Code (TYPE)"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSizesmall" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center|left"
                        android:padding="2dp"
                        android:text="Subject Description"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSizesmall" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center|left"
                        android:padding="2dp"
                        android:text="Faculty"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textSizesmall" />

                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/subCodeRecyVw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
